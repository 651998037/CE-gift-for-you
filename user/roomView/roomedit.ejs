    <div class="row">
        <div class="col-md-12">
            <% for (let i = 0; i < room.length; i++) { %>
                <form action="/Uroom/edit/<%= room[i].id %>" method="post">
                <div class="form-group">
                    <label for="roomname">ชื่อห้อง</label>
                    <input type="text" name="roomname" class="form-control" value="<%= room[i].roomname %>">
                </div>
                <br>
            
                <a href="/Uroom/list" class="btn btn-danger">ย้อนกลับ</a>
                <button type="submit" class="btn btn-success">บันทึก</button>
            </form>
            <% } %>
        </div>
    </div>
</div>
