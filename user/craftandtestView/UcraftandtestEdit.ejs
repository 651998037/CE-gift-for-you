<body>
    <h1 align="center">แก้ไขข้อมูล</h1>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12 d-flex justify-content-center">   
                <form action="/Ucraftandtest/save/<%= data.id %>" method="post" class="w-50">
                    <div class="form-group">
                        <label for="withdraw">เบิก</label>
                        <input type="text" class="form-control" id="withdraw" name="withdraw" value="<%= data.withdraw %>" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="status">สถานะ:</label>
                        <input type="text" class="form-control" id="status" name="status" value="<%= data.status %>" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="completiondate">วันที่เสร็จ:</label>
                        <input type="date" class="form-control" id="completiondate" name="completiondate" value="<%= data.completiondate %>" required>
                    </div> 
                    <br>
                    <button type="submit" class="btn btn-success">บันทึก</button>
                    <a href="/Ucraftandtest/list" class="btn btn-danger">กลับ</a>
                </form>
            </div>
        </div>
    </div>
