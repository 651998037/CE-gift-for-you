<%- include("../_header1"); -%>
<br>
<br>
<h1 align="center">ผู้มีสิทธิ์อนุมัติ</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ลำดับที่</th>
                        <th>ชื่อ</th>
                        <th>เบอร์ติดต่อ</th>
                        <th>เพิ่มเติม</th>
                    </tr>
                </thead>
                <a href="/listofapprovedpeople/add" class="btn btn-primary">เพิ่มข้อมูล</a>
                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td>0<%= data[i].phone %></td>
                                <td>
                                    <a href="/listofapprovedpeople/edit/<%= data[i].id %>" class="btn btn-success">แก้ไข</a>
                                    <a href="/listofapprovedpeople/delete/<%= data[i].id %>" class="btn btn-danger">ลบข้อมูล</a> 
                                </td>
                            </tr>
                        <% } %>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("../_footer"); -%>