<h1 align="center">แก้ไข</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <form action="/Udeliveryperson/save/<%= data3 && data3[0] ? data3[0].id : '' %>" method="post" class="w-50">
                <div class="form-group">
                    <br>
                    <div class="form-group">
                        <label for="prepare">สถานที่บริจาค:</label>
                        <input type="text" class="form-control" id="prepare" name="prepare" value="<%= data.prepare %>" >
                    </div>
                <br>
                <div class="form-group">
                    <label for="person">รายชื่อ</label> <!-- &nbsp;&nbsp;&nbsp;<a href="/media/list">เพิ่ม</a> -->
                   <select class="form-control" id="person" name="name">
                       <option value="">กรุณาเลือก</option>
                       <% if (data2) { %>
                           <% for (var i = 0; i < data2.length; i++) { %>
                               <option value="<%= data2[i].id %>" <% if(data3 && data3[0] && data2[i].id==data3[0].person){ %>selected<% } %> ><%= data2[i].name %></option>
                           <% } %>
                       <% } %>
                   </select>
               </div>
                <br>
                <button type="submit" class="btn btn-primary">บันทึก</button>
                <a href="/Udeliveryperson/list" class="btn btn-danger">ย้อนกลับ</a>
            </form>
        </div>
    </div>
</div>
<%- include("../_footer"); -%>