<%- include("../_header1"); -%>
<body>
    <h1 align="center">แก้ไขข้อมูลบุคคล</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12 d-flex justify-content-center">   
            <form method="post" action="/person/edit/<%= data.id %>" class="w-50">
                <div class="form-group">
                    <label for="name">ชื่อ</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>">
                </div>
                <div class="form-group">
                    <label for="phone">เบอร์</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="0<%= data.phone %>">
                </div>
                <div class="form-group">
                    <label for="lineid">ไลนไอดี</label>
                    <input type="text" class="form-control" id="lineid" name="lineid" value="<%= data.lineid %>">
                </div>
                <div class="form-group">
                    <label for="gender">เพศ</label>
                    <input type="text" class="form-control" id="gender" name="gender" value="<%= data.gender %>">
                </div>
                <br>
                <a href="/person/list" class="btn btn-danger">ย้อนกลับ</a>
                <button type="submit" class="btn btn-success">บันทึก</button>
            </form>
        </div>
    </div>
</div>
<%- include("../_footer"); -%>
