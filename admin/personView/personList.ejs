<%- include("../_header1"); -%>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1>บุคคล</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-right">
            <a align="right" href="/person/add" class="btn btn-primary">เพิ่มบุคคล</a>
            </div>
            <div class="table-responsive">
                <br>
                <table class="table table-bordered table-hover">
                    <thead class="thead-white">
                        <tr>
                        <th>ลำดับที่</th>
                        <th>ชื่อ</th>
                        <th>เบอร์ติดต่อ</th>
                        <th>ไอดีไลน์</th>
                        <th>เพศ</th>
                        <th>เพิ่มเติม</th>

                    </tr>
                </thead>
                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].phone %></td>
                                <td><%= data[i].lineid %></td>
                                <td><%= data[i].gender %></td>
                                <td>
                                    <a href="/person/edit/<%= data[i].id %>" class="btn btn-success ">แก้ไข</a>
                                    &nbsp;&nbsp;&nbsp;<a href="/person/delete/<%= data[i].id %>" class="btn btn-danger ">ลบข้อมูล</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("../_footer"); -%>
