<h1 align="center">สื่อ</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-15">
            <table class="table table-bordered table-hover"> 
                <thead>
                    <tr>
                        <th>ลำดับที่</th>
                        <th>ชื่อ</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <a href="/media/add" class="btn btn-primary">เพิ่มสื่อ</a>
                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td>
                                    <a href="/mediaEdit/<%= data[i].id %>" class="btn btn-success">แก้ไข</a>
                                    <a href="/deletemedia/<%= data[i].id %>" class="btn btn-danger">ลบข้อมูล</a> 
                                </td>
                            </tr>
                        <% } %>
                    <% } %> 
                </tbody>
            </table>
            
            <!-- <a href="/pr" class="btn btn-danger">Back</a> -->
        </div>
    </div>
</div>

