<%- include("../_header1"); -%>
<br>
<br>
<h1 align="center">เพิ่มข้อมูล</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12 d-flex justify-content-center">
            <form action="/edit/add" method="post" class="w-50">
                <div class="form-group">
                    <label for="editor">คนแก้</label>
                    <select class="form-control" name="editor">
                        <option value="">กรุณาเลือก</option>
                        <% if (data1) { %>
                            <% for (var i = 0; i < data1.length; i++) { %>
                                <option value="<%= data1[i].id %>"><%= data1[i].name%></option>
                            <% } %>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="report">รับแจ้ง</label>
                    <select class="form-control" name="report">
                        <option value="">กรุณาเลือก</option>
                        <% if (data2) { %>
                            <% for (var i = 0; i < data2.length; i++) { %>
                                <option value="<%= data2[i].id %>"><%= data2[i].problem%></option>
                            <% } %>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="carryout">ดำเนินการ:</label>
                    <input type="text" class="form-control" id="carryout" name="carryout" value="<%= data4.carryout %>" required>
                </div>
                <div class="form-group">
                    <label for="carryoutday">วันดำเนินการ:</label>
                    <input type="date" class="form-control" id="carryoutday" name="carryoutday" value="<%= data4.carryoutday %>" required>
                </div>
                <br>
                <button type="submit" class="btn btn-success">บันทึก</button>
                <a href="/edit/list" class="btn btn-primary">กลับ</a>
            </form>
        </div>
    </div>
</div>

<%- include("../_footer"); -%>
