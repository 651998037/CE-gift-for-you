<%- include("../_header1"); -%>

<body>
    <br>
    <br>
    <h1 align="center">โครงการทั้งหมด</h1>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ลำดับ</th>
                            <th>ชื่อโครงการ</th>
                            <th>เพิ่มเติม</th>
                        </tr>
                    </thead>
                    <a href="/project/add" class="btn btn-primary">เพิ่มโครงการ</a>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% for (var i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td><%= (i + 1) %></td>
                                    <td><%= data[i].projectname %></td>
                                    <td>
                                        <a href="/project/edit/<%= data[i].id %>" class="btn btn-success">แก้ไข</a>
                                        &nbsp;&nbsp;&nbsp;<a href="/project/delete/<%= data[i].id %>" class="btn btn-danger">ลบข้อมูล</a> 
                                    </td>
                                </tr>
                            <% } %>
                        <% } %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include("../_footer"); -%>